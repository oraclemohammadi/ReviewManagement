<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity PurchaseOrder.
    -->
    <changeSet id="20170103120708-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="invoice_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_invoice_id"
                                 referencedColumnNames="id"
                                 referencedTableName="invoice_data"/>

        <addForeignKeyConstraint baseColumnNames="payment_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_payment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_execution"/>

    </changeSet>
</databaseChangeLog>
