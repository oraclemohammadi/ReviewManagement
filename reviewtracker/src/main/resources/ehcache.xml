<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.milo.amz.review.domain.User" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.Authority" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.milo.amz.review.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.Product" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.Product.reviews" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.Product.canBeOrderItems" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.Review" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.PurchaseOrder" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.PurchaseOrder.shippedTos" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.PurchaseOrder.contains" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.ShippingAddress" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.PurchaseOrderItem" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.PaymentExecution" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.InvoiceData" uses-template="simple"/>

    <cache alias="com.milo.amz.review.domain.Promotions" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
